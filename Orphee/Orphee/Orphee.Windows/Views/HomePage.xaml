<Page
    x:Class="Orphee.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="using:Orphee.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Microsoft.Practices.Prism.Mvvm"
    mc:Ignorable="d"
    mvvm:ViewModelLocator.AutoWireViewModel="True">

    <Grid Background="{ThemeResource FocusVisualWhiteStrokeThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Grid Background="#78C7F9" Grid.Row="0" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Name="PopularTextBox" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Popular" FontSize="35" Foreground="{Binding PopularCreationsTitleTextBoxForegroundColor, Mode=TwoWay}"/>
                    <TextBlock Name="FriendNewsTextBox" Text="Friend news" FontSize="35" VerticalAlignment="Center" Margin="30, 0, 0, 0" Foreground="{Binding NewFriendsCreationsTitleTextBoxForegroundColor, Mode=TwoWay}"/>
                </StackPanel>
            <SearchBox Margin="20, 0, 20, 5" Visibility="{Binding SearchBoxVisibility, Mode=TwoWay}" VerticalAlignment="Bottom"/>
        </Grid>
        <ListView Grid.Row="1" ItemsSource="{Binding FlowList}" Height="Auto" IsSwipeEnabled="True" ShowsScrollingPlaceholders="True" HorizontalAlignment="Stretch" SelectionMode="None" ManipulationMode="TranslateX, System" ManipulationStarted="UIElement_OnManipulationStarted" ManipulationCompleted="UIElement_OnManipulationCompleted">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Center">
                       <StackPanel Margin="75" Orientation="Horizontal">
                            <Grid Tapped="Play">
                                <Image Source="/Assets/logo transparent.png" VerticalAlignment="Top" Height="200" Width="200"/>
                                <Image Source="/Assets/play-logo.png" VerticalAlignment="Top" Height="200" Width="200" Opacity="0.6" Margin="20, 0, 0, 0"/>
                            </Grid>
                            <StackPanel Margin="50, 0, 0, 0" VerticalAlignment="Center" Tapped="Info">
                                <TextBlock Text="CreatorName" Foreground="#78C7F9" FontSize="25"/>
                                <TextBlock Text="{Binding}" Foreground="#78C7F9" FontSize="25" VerticalAlignment="Bottom"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                                        <Image Source="/Assets/commentary-icon.png" Height="20" Width="20"/>
                                        <TextBlock Text="1500" Foreground="#BDBEC0" FontSize="20"/>
                                    </StackPanel>
                                    <Line Grid.Column="1" X1="0" Y1="5" X2="0" Y2="15" Stroke="#BDBEC0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <StackPanel Orientation="Horizontal" Grid.Column="2">
                                        <Image Source="/Assets/heart-icon.png" Height="20" Width="20"/>
                                        <TextBlock Text="1500" Foreground="#BDBEC0" FontSize="20"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                        <Line Stroke="#BDBEC0" X1="0" Y1="0" X2="150" Y2="0" Stretch="Fill" Margin="10, 5, 0, 10" VerticalAlignment="Bottom"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ui:MyBottomAppBar Grid.Row="1" x:Name="MyBottomAppBar" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
