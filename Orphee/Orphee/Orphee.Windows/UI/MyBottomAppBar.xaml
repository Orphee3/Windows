    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid>
        <StackPanel Orientation="Horizontal" Background="#78C7F9">
            <AppBarButton Name="Home" Icon="Home" Label="Home" Tapped="Button_Tapped" Width="385"/>
            <AppBarButton Name="Friends" Icon="People" Label="Friends" Tapped="Button_Tapped" Width="385"/>
            <AppBarButton Name="LoopCreation" Tapped="Button_Tapped" Width="385"/>
            <AppBarButton Name="Messages" Icon="Message" Label="Messages" Tapped="Button_Tapped" Width="385"/>
